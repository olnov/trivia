FROM node:20-alpine

WORKDIR /app
COPY package*.json ./

RUN npm install

COPY . .

EXPOSE 3000

# DB Environment Variables
ENV DB_NAME=$DB_NAME
ENV DB_USER=$DB_USER
ENV DB_PASSWORD=$DB_PASSWORD
ENV DB_HOST=$DB_HOST
ENV DB_PORT=$DB_PORT
ENV DB_FORCE_SYNC=$DB_FORCE_SYNC
ENV DB_DIALECT=postgres

# S3 Environment Variables
ENV IDRIVE_E2_PUBLIC_ENDPOINT=$IDRIVE_E2_PUBLIC_ENDPOINT
ENV IDRIVE_E2_PRIVATE_ENDPOINT=$IDRIVE_E2_PRIVATE_ENDPOINT
ENV IDRIVE_E2_ACCESS_KEY=$IDRIVE_E2_ACCESS_KEY
ENV IDRIVE_E2_SECRET_KEY=$IDRIVE_E2_SECRET_KEY

CMD ["npm", "start"]
